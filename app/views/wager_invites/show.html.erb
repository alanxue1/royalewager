<div class="mx-auto max-w-xl px-6 py-10">
  <div class="card-royale rounded-xl p-6">
    <h1 class="text-royale-heading text-2xl font-bold text-supercell-dark">Wager invite</h1>

    <div class="mt-4 space-y-2 text-sm font-semibold text-supercell-dark">
      <div>
        Creator: <span class="font-mono text-royale-blue"><%= @wager.tag_a %></span>
      </div>
      <div>
        Amount: <span class="font-mono text-royale-gold"><%= @wager.amount_sol %></span> sol
      </div>
      <div>
        Deadline: <span class="font-mono"><%= @wager.deadline_at&.utc&.iso8601 %></span>
      </div>
      <div>
        Status: <span class="font-mono"><%= @wager.status_display %></span>
      </div>
    </div>

    <div class="mt-6 flex items-center justify-between gap-3">
      <%= link_to "View wager", wager_path(@wager), class: "text-sm font-display font-bold text-royale-blue hover:underline" %>

      <%= button_to "Accept",
        accept_wager_path(@wager, token: @invite.token),
        method: :post,
        class: "btn-royale inline-flex cursor-pointer items-center rounded-lg px-4 py-2.5 text-sm text-white" %>
    </div>
  </div>
</div>


