<div class="mx-auto max-w-2xl px-6 py-10">
  <div
    data-privy-widget="1"
    data-variant="logout_only"
    data-privy-app-id="<%= ENV["PRIVY_APP_ID"].to_s %>"
  ></div>

  <div class="card-royale rounded-xl">
    <div class="flex items-center justify-between gap-4 border-b-2 border-supercell-gray px-5 py-4">
      <h1 class="text-royale-heading text-2xl font-bold text-supercell-dark">Create Wager</h1>
    </div>

    <div class="p-4 bg-supercell-gray/20">
      <div class="card-royale-item overflow-hidden p-6">
        <%= form_with model: @wager do |f| %>
          <% if @wager.errors.any? %>
            <div class="mb-4 rounded-lg border-2 border-royale-defeat bg-red-50 p-3 text-sm text-red-800">
              <div class="font-display font-bold">Fix these:</div>
              <ul class="list-disc pl-5">
                <% @wager.errors.full_messages.each do |m| %>
                  <li><%= m %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
            <div>
              <%= f.label :amount_sol, "Wager amount (SOL)", class: "block text-sm font-display font-bold text-supercell-dark" %>
              <%= f.number_field :amount_sol, min: 0, step: "0.000001", placeholder: "0.01", class: "mt-1 w-full rounded-lg border-2 border-supercell-gray bg-white px-3 py-2 font-mono text-sm text-supercell-dark focus:border-royale-blue focus:outline-none focus:ring-2 focus:ring-royale-blue" %>
            </div>
            <div>
              <label class="block text-sm font-display font-bold text-supercell-dark" for="wager_duration_minutes">Deadline</label>
              <%= select_tag(
                "wager[duration_minutes]",
                options_for_select([["10 min", 10], ["20 min", 20], ["30 min", 30], ["1 hr", 60]], @wager.duration_minutes.to_i),
                id: "wager_duration_minutes",
                class: "mt-1 w-full rounded-lg border-2 border-supercell-gray bg-white px-3 py-2 text-sm text-supercell-dark focus:border-royale-blue focus:outline-none focus:ring-2 focus:ring-royale-blue"
              ) %>
            </div>
          </div>

          <div class="mt-8 flex items-center justify-between">
            <%= link_to "Back", wagers_path, class: "btn-royale-secondary inline-flex cursor-pointer items-center rounded-lg px-4 py-2.5 text-sm text-white" %>
            <%= f.submit "Create", class: "btn-royale inline-flex cursor-pointer items-center rounded-lg px-6 py-3 text-base text-white shadow-royale" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


