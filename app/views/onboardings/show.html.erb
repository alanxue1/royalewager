<div class="mx-auto max-w-xl px-6 py-10">
  <div class="card-royale rounded-xl p-6">
    <h1 class="text-royale-heading text-2xl font-bold text-supercell-dark">Welcome!</h1>

    <p class="mt-2 text-sm text-supercell-medium">
      To get started, please enter your Clash Royale player tag. This will be used when you create or accept wagers.
    </p>

    <%= form_with model: @user, url: onboarding_path, method: :patch, class: "mt-6 space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="rounded-lg border-2 border-royale-defeat bg-red-50 p-3 text-sm text-red-800">
          <div class="font-display font-bold">Please fix these errors:</div>
          <ul class="mt-1 list-disc pl-5">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :clash_royale_tag, "Clash Royale tag", class: "block text-sm font-display font-bold text-supercell-dark" %>
        <%= f.text_field :clash_royale_tag, placeholder: "#P0LYQ2", class: "mt-2 w-full rounded-lg border-2 border-supercell-gray bg-white px-3 py-2 font-mono text-sm text-supercell-dark focus:border-royale-blue focus:outline-none focus:ring-2 focus:ring-royale-blue" %>
        <div class="mt-1 text-xs text-supercell-medium">
          Your tag must start with # and contain only uppercase letters and numbers.
        </div>
      </div>

      <div class="flex items-center justify-end">
        <%= f.submit "Continue", class: "btn-royale inline-flex cursor-pointer items-center rounded-lg px-4 py-2.5 text-sm text-white" %>
      </div>
    <% end %>
  </div>
</div>

