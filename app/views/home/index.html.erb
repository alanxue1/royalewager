<main class="min-h-screen px-6">
  <div class="mx-auto flex min-h-screen max-w-3xl flex-col items-center justify-center gap-12 text-center sm:gap-14">
    <div class="flex flex-col items-center gap-5 sm:gap-6">
      <div
        class="inline-flex items-center rounded-xl border border-slate-200 bg-white px-4 py-2 text-sm font-medium tracking-wide text-slate-600 shadow-sm"
        data-controller="rotating-card"
        data-rotating-card-phrases-value='["CHALLENGE FRIENDS","GET PAID INSTANTLY","JOIN THE WAITLIST"]'
        data-rotating-card-interval-ms-value="2200"
      >
        <span
          class="transition-opacity duration-200"
          data-rotating-card-target="text"
        >challenge friends</span>
      </div>

      <h1 class="text-6xl font-extrabold tracking-tight text-slate-900 sm:text-7xl sm:leading-[1.02]">
        Royale Wager
      </h1>
      <p class="max-w-xl text-lg leading-relaxed text-slate-600 sm:text-xl">
        Wager on head-to-head Clash Royale matches.
      </p>
      <div class="h-px w-20 bg-slate-200" aria-hidden="true"></div>
    </div>

    <div
      data-privy-widget="1"
      data-variant="landing"
      data-privy-app-id="<%= ENV["PRIVY_APP_ID"].to_s %>"
      data-solana-cluster="<%= ENV.fetch("SOLANA_CLUSTER", "devnet") %>"
      data-solana-rpc-url="<%= ENV.fetch("SOLANA_RPC_URL", "https://api.devnet.solana.com") %>"
      data-escrow-program-id="<%= ENV["ESCROW_PROGRAM_ID"].to_s %>"
    ></div>
  </div>
</main>


